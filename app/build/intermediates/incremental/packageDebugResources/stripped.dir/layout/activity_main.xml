<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"


    android:background="@drawable/gradient3">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Bluetooth "
                    android:id="@+id/bluetooth"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Google MAPS"
                    android:id="@+id/maps"
                    android:layout_weight="1"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Proximity"
                    android:id="@+id/proximity"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="SensorActivity"
                    android:id="@+id/sensor"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:text="Shared_
                    Preference"
                    android:id="@+id/shara"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="background service"
                    android:id="@+id/service"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal"
                android:weightSum="2">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="BroadcastImage to your app"
                    android:id="@+id/bimage"
                    android:layout_weight="1"
                    />



                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Battery Measure SHOW"
                    android:id="@+id/battery"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Fragments"
                    android:id="@+id/frag"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Adapter List "
                    android:id="@+id/listadapt"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Scroll View"
                    android:id="@+id/scroll"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Intents"
                    android:id="@+id/inti"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Splash Screen"
                    android:id="@+id/splash"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Linear Layouts"
                    android:id="@+id/layoutss"
                    android:layout_weight="1"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="OptionMenu"
                    android:id="@+id/option"
                    android:layout_weight="1"
                    />


                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Relative Layout"
                    android:id="@+id/relate"
                    android:layout_weight="1"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Card View"
                    android:id="@+id/cards"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="AlertDialog"
                    android:id="@+id/alert"
                    android:layout_weight="1"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Activity Cycle"
                    android:id="@+id/cycle"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    />


                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="CustomAlert"
                    android:id="@+id/custom"
                    android:layout_weight="1"
                    />

            </LinearLayout>




        </LinearLayout>
    </ScrollView>
</LinearLayout>
