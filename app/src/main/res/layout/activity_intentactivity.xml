<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".intentactivity"
    android:orientation="vertical"
    android:gravity="center">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/implicit"
        android:text="Implicit Intent(Einfochips.com)"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/explicit"
        android:text="Implicit Intent(Text Message)"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id ="@+id/message"
        android:layout_margin="16dp"/>


    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/implicit_image"
        android:src="@drawable/whatsapp"/>
    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/implicit_tele"
        android:src="@drawable/telephoney"/>

</LinearLayout>